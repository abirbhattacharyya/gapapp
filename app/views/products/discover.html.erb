<h1>Tell us either parameter and we will discover for you</h1>

<% form_for :wardrobe, :url => discover_path do |f| %>
  <%= hidden_field_tag :id, @wardrobe.id %>
  <p class="ctrl">
      <label>Total Price Under? ($)</label>
      <%= f.text_field :total_price, :class => "w160px", :onKeyPress => "return keyAllowed(event,'0123456789')", :onblur => "this.value=removeChars(this.value)" %>
  </p>
  OR
  <p class="ctrl">
      <label>Discounted Price Under? ($)</label>
      <%= f.text_field :discounted_price, :class => "w160px", :onKeyPress => "return keyAllowed(event,'0123456789')", :onblur => "this.value=removeChars(this.value)" %>
  </p>
  <p class="ctrl actions">
      <span class="button green"><%= f.submit("Discover !") %></span>
  </p>
<% end %>
