<h1>Create a custom wardrobe or we crunch & you discover!</h1>

<% form_for :wardrobe, :url => wardrobe_path, :html => {:multipart => true} do |f| %>
  <p class="ctrl radio-group">
      Gender?<br />
      <%= f.radio_button :gender, "women", :checked => true %> <label>Women</label><br />
      <%= f.radio_button :gender, "men" %> <label>Men</label><br />
  </p>
  <p class="ctrl">
      How many wardrobe items?<br />
      <%= f.text_area :qty, :class => "w220px", :rows => 2, :cols => 40, :onKeyPress => "return keyAllowed(event,'0123456789')" %>
  </p>
  <%= hidden_field_tag :s_type, "create" %>
  <p>
      <span class="button green"><%= f.submit("Create!", :onclick => "$('s_type').value='create'") %></span>
      <span class="button green"><%= f.submit("Discover!", :onclick => "$('s_type').value='discover'") %></span>
  </p>
<% end %>
